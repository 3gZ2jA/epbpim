<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="bpim-adminuser" namespace="/admin" extends="bpim-default">
	    <action name="login" method="login" class="adminUserAction">
	    	<result name="input">/jsp/admin/adminLogin.jsp</result>
			<result type="redirect-action">listEnterpriseInfo.do</result>
		</action>
		<action name="listNews" method="listNewsAnnounces" class="com.ryxx.bpim.web.action.admin.NewAnnounceAction">
			<result>/jsp/admin/listNews.jsp</result>
			<interceptor-ref name="manager"/>
		</action>
		<action name="addNews" method="insertNewsAnnounces" class="com.ryxx.bpim.web.action.admin.NewAnnounceAction">
			<result type="redirect-action">listNews.do</result>
			<interceptor-ref name="manager"/>
		</action>
		<action name="showNews" method="getDetailNewsAnnounces" class="com.ryxx.bpim.web.action.admin.NewAnnounceAction">
			<result>/jsp/admin/updateNews.jsp</result>
			<interceptor-ref name="manager"/>
		</action>						  
		<action name="updateNews" method="updateNewsAnnounces" class="com.ryxx.bpim.web.action.admin.NewAnnounceAction">
			<result type="redirect-action">listNews.do</result>
			<interceptor-ref name="manager"/>
		</action>
		<action name="deleteNews" method="deleteNewsAnnounces" class="com.ryxx.bpim.web.action.admin.NewAnnounceAction">
			<result type="redirect-action">listNews.do</result>
			<interceptor-ref name="manager"/>
		</action>
		<action name="listUserAdvice" method="searchUserAdvice"
			class="com.ryxx.bpim.web.action.admin.UserAdviceAction">
			<result>/jsp/admin/listUserAdvice.jsp</result>
			<interceptor-ref name="manager"/>
		</action>		
		<action name="importGovernmentFile" method="importGovernmentFile"
			class="com.ryxx.bpim.web.action.admin.GovernmentFileAction">
			<result>/admin/importGovernmentFile.jsp</result>
			<interceptor-ref name="manager"/>
		</action>
	</package>
	<package name="bpim-enterpriseinfo" namespace="/admin" extends="bpim-default">
		<action name="listEnterpriseInfo" method="list" class="enterpriseInfoAction">
			<result>/jsp/admin/listCompany.jsp</result>
		</action>
		<action name="addEnterpriseInfo" method="add" class="enterpriseInfoAction">
			<result type="redirect-action">listEnterpriseInfo.do</result>
		</action>
		<action name="newEnterpriseInfo" method="newEnterpriseInfo" class="enterpriseInfoAction">
			<result>/jsp/admin/addCompany.jsp</result>
		</action>
	</package>
	<package name="bpim-searchGovernmentInventory" namespace="/main" extends="bpim-default">
		<action name="searchGovernmentInventory" method="searchGovernmentInventory"
			class="com.ryxx.bpim.web.action.mianPanel.SearchGovernmentInventoryAction">
			<result name="inventory2003">/main/simple/searchGovernmentInventory_2003.jsp</result>
			<result name="inventory2008">/main/simple/searchGovernmentInventory_2008.jsp</result>
			<result name="nosession" type="redirect">/index.jsp</result>
			<interceptor-ref name="user"/>
		</action>
	</package>
	<package name="bpim-searchGovernmentFile" namespace="/main" extends="bpim-default">
		<action name="searchGovernmentFile" method="searchGovernmentFile"
			class="com.ryxx.bpim.web.action.mianPanel.SearchGovernmentFileAction">
			<result>/main/simple/listGovernmentFile.jsp</result>
			<result name="nosession" type="redirect">/index.jsp</result>
			<interceptor-ref name="user"/>
		</action>
	</package>
	<package name="bpim-viewGovernmentFile" namespace="/main" extends="bpim-default">
		<action name="viewGovernmentFile" method="viewGovernmentFile"
			class="com.ryxx.bpim.web.action.mianPanel.SearchGovernmentFileAction">
			<result>/main/simple/showGovernmentFileDetail.jsp</result>
			<result name="nosession" type="redirect">/index.jsp</result>
			<interceptor-ref name="user"/>
		</action>
	</package>
	<package name="bpim-main" namespace="/main" extends="bpim-default">
		<action name="main" method="listNewsAnnounces" 
			class="com.ryxx.bpim.web.action.admin.NewAnnounceAction">
			<result>/main/main.jsp</result>
			<result name="nosession" type="redirect">/index.jsp</result>
			<interceptor-ref name="user"/>
		</action>
		<action name="showNews" method="getDetailNewsAnnounces" 
			class="com.ryxx.bpim.web.action.admin.NewAnnounceAction">
			<result>/main/showNews.jsp</result>
			<result name="nosession" type="redirect">/index.jsp</result>
			<interceptor-ref name="user"/>
		</action>
	</package>	
	<package name="bpim-addUserAdvice" namespace="/main" extends="bpim-default">
		<action name="addUserAdvice" method="addUserAdvice"
			class="com.ryxx.bpim.web.action.admin.UserAdviceAction">
			<result>/main/user/userAdvice.jsp</result>
			<result name="nosession" type="redirect">/index.jsp</result>
			<interceptor-ref name="user"/>
		</action>
	</package>
</struts>