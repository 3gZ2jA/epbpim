<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="userInfoDAO" class="com.ryxx.bpim.dao.UserInfoDAOImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="userInfoServiceTarget" class="com.ryxx.bpim.service.UserInfoServiceImpl">
		<property name="userInfoDAO">
			<ref local="userInfoDAO"/>
		</property>
	</bean>
	<bean id="userInfoService" parent="baseTransactionProxyCdm">
		<property name="target" ref="userInfoServiceTarget"/>
	</bean>
	<bean id="userInfoAction" class="com.ryxx.bpim.web.action.UserInfoAction" scope="prototype">
		<property name="userInfoService">
			<ref local="userInfoService"/>
		</property>
	</bean>
	
	<bean id="adminDeptDAO" class="com.ryxx.bpim.dao.AdminDeptDAOImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="adminDeptServiceTarget" class="com.ryxx.bpim.service.AdminDeptServiceImpl">
		<property name="adminDeptDAO">
			<ref local="adminDeptDAO"/>
		</property>
	</bean>
	<bean id="adminDeptService" parent="baseTransactionProxyCdm">
		<property name="target" ref="adminDeptServiceTarget"/>
	</bean>
	<bean id="adminDeptAction" class="com.ryxx.bpim.web.action.UserInfoAction" scope="prototype">
		<property name="adminDeptService">
			<ref local="adminDeptService"/>
		</property>
	</bean>
</beans>