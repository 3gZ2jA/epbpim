<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="bpim-projectManage" namespace="/projectManage" extends="bpim-default">
		<action name="preAddProject" method="preAddProjectInfo" class="projectAction">
			<result>/projectManage/addProject.jsp</result>
		</action>
	    <action name="addProject" method="addProjectInfo" class="projectAction">
			<result type="redirect-action">schProjectList.do</result>
		</action>
		<action name="delProject" method="delProjectInfo" class="projectAction">
			<result type="redirect-action">schProjectList.do</result>
		</action>
		<action name="preModProject" method="preModProjectInfo" class="projectAction">
			<result>/projectManage/modProject.jsp</result>
		</action>
		<action name="modProject" method="modProjectInfo" class="projectAction">
			<result type="redirect-action">schProjectList.do</result>
		</action>
		<action name="modProjectContractAndInvoices" method="modProjectContractAndInvoices" class="projectAction">
			<result type="redirect-action">schProjectList.do</result>
		</action>
		<action name="closeProject" method="closeProjectInfo" class="projectAction">
			<result type="redirect-action">schProjectList.do</result>
		</action>
		<action name="schProjectList" method="schProjectInfoList" class="projectAction">
			<result>/projectManage/queryProject.jsp</result>
		</action>
		<action name="schProject" method="findProjectInfo" class="projectAction">
			<result>/projectManage/projectDetail.jsp</result>
		</action>
		<action name="addProjectStream" method="addProjectStream" class="projectStreamAction">
			<result type="redirect">schProject.do?projectInfo.id=${projectID}</result>
		</action>
		<action name="delProjectStream" method="delProjectStream" class="projectStreamAction">
			<result type="redirect">schProject.do?projectInfo.id=${projectID}</result>
		</action>	
	</package>
</struts>