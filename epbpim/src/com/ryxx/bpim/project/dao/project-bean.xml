<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="com.ryxx.bpim.project.dao.ProjectDAO" class="com.ryxx.bpim.project.dao.ProjectDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="com.ryxx.bpim.project.service.ProjectService" parent="baseTransactionProxyCdm">
		<property name="target" ref="com.ryxx.bpim.project.service.ProjectService.target" />
	</bean>
	<bean id="com.ryxx.bpim.project.service.ProjectService.target" class="com.ryxx.bpim.project.service.ProjectServiceImpl">
	</bean>
	<bean id="projectAction" class="com.ryxx.bpim.project.action.ProjectAction" scope="prototype">
		<property name="projectService">
			<ref local="com.ryxx.bpim.project.service.ProjectService"/>
		</property>
		<property name="adminDeptService">
			<ref local="com.ryxx.bpim.user.service.AdminDeptService"/>
		</property>
		<property name="userInfoService">
			<ref local="com.ryxx.bpim.user.service.UserInfoService"/>
		</property>
		<property name="projectStreamService">
			<ref local="com.ryxx.bpim.project.service.ProjectStreamService"/>
		</property>
	</bean>	
	
	<bean id="com.ryxx.bpim.project.dao.ProjectStreamDAO" class="com.ryxx.bpim.project.dao.ProjectStreamDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="com.ryxx.bpim.project.service.ProjectStreamService" parent="baseTransactionProxyCdm">
		<property name="target" ref="com.ryxx.bpim.project.service.ProjectStreamService.target" />
	</bean>
	<bean id="com.ryxx.bpim.project.service.ProjectStreamService.target" class="com.ryxx.bpim.project.service.ProjectStreamServiceImpl">
	</bean>
	<bean id="projectStreamAction" class="com.ryxx.bpim.project.action.ProjectStreamAction" scope="prototype">
		<property name="projectStreamService">
			<ref local="com.ryxx.bpim.project.service.ProjectStreamService"/>
		</property>
	</bean>	
	
	
	<bean id="com.ryxx.bpim.user.service.AdminDeptService" parent="baseTransactionProxyCdm">
		<property name="target" ref="com.ryxx.bpim.user.service.AdminDeptService.target" />
	</bean>
	<bean id="com.ryxx.bpim.user.service.AdminDeptService.target" class="com.ryxx.bpim.user.service.AdminDeptServiceImpl">
	</bean>
	
	<bean id="com.ryxx.bpim.user.service.UserInfoService" parent="baseTransactionProxyCdm">
		<property name="target" ref="com.ryxx.bpim.user.service.UserInfoService.target" />
	</bean>
	<bean id="com.ryxx.bpim.user.service.UserInfoService.target" class="com.ryxx.bpim.user.service.UserInfoServiceImpl">
	</bean>
</beans>